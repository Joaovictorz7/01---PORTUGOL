ch:inteiro
cas, alter, enter, cont, tentativas:inteiro

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
 escreval ("-------CHARADAS------")
escreval ("Aperte enter para começar")
 LEIA (ENTER)

 ch<-randI(5)
 cont<-0
 tentativas<-0
 //cont = parar quando acertar, tentativas = numero de tentativas
 enquanto (cont=0) e (tentativas<2) faca

 escolha ch

 caso 0

escreval ("No meu jardim existe 3 pés de alface,")
ESCREVAL ("1 de pepino e 5 de cenoura. Quantos pés eu tenho no total?")
escreval ("1)2 pés")
escreval ("2)9 pés")
escreval ("3)7 pés")

leia (alter)

se (alter=1) entao
escreval ("RESPOSTA CERTA!!")
cont<- cont+1
escreval("Eu, como a maior parte das pessoas, tenho 2 pés.")
senao
escreval ("Resposta errada")
tentativas <-tentativas +1
fimse

se (tentativas=2) entao
escreval("Eu, como a maior parte das pessoas, tenho 2 pés.")
senao
fimse

caso 1

